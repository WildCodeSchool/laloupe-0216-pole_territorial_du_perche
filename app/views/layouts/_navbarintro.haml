.navbar-intro
  .navbar.navbar-default
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Menu
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to image_tag("perche-28.png", alt: "Perche 2.8"), root_path, class: 'navbar-brand'
      #navbar.navbar-collapse.collapse
        %ul.nav.navbar-nav.navbar-right
          - if contributeur_signed_in?
            - if current_contributeur.type == 'Animateur'
              %li= link_to "Modération", animation_path
            - else 
              %li= link_to current_contributeur.pseudo, root_path, class: 'btn btn-primary'
            %li= link_to "Déconnexion", destroy_contributeur_session_path, method: :delete
          - else
            %li= link_to "Connexion", new_contributeur_session_path
    .ligne-rouge
